//
//  DebugNew.xcconfig
//  Debug конфигурация для новой версии приложения (com.azg.Convertik)
//

#include "../Pods/Target Support Files/Pods-Convertik/Pods-Convertik.debug.xcconfig"

// Override PODS_CONFIGURATION_BUILD_DIR to use Debug instead of DebugNew
// This ensures Pods frameworks are found when building with DebugNew configuration
PODS_CONFIGURATION_BUILD_DIR = ${PODS_BUILD_DIR}/Debug$(EFFECTIVE_PLATFORM_NAME)
PODS_XCFRAMEWORKS_BUILD_DIR = ${PODS_CONFIGURATION_BUILD_DIR}/XCFrameworkIntermediates

// Add explicit framework search paths for GoogleMobileAds
// These paths point to Debug build products (since DebugNew maps to Debug for Pods)
FRAMEWORK_SEARCH_PATHS = $(inherited) "${PODS_CONFIGURATION_BUILD_DIR}/Google-Mobile-Ads-SDK" "${PODS_ROOT}/Google-Mobile-Ads-SDK/Frameworks/GoogleMobileAdsFramework" "${PODS_XCFRAMEWORKS_BUILD_DIR}/Google-Mobile-Ads-SDK"

// Add Swift include paths for module resolution
SWIFT_INCLUDE_PATHS = $(inherited) "${PODS_CONFIGURATION_BUILD_DIR}/Google-Mobile-Ads-SDK" "${PODS_XCFRAMEWORKS_BUILD_DIR}/Google-Mobile-Ads-SDK"

// Add Swift flags for framework search
OTHER_SWIFT_FLAGS = $(inherited) -F"${PODS_CONFIGURATION_BUILD_DIR}/Google-Mobile-Ads-SDK" -F"${PODS_XCFRAMEWORKS_BUILD_DIR}/Google-Mobile-Ads-SDK" -I"${PODS_XCFRAMEWORKS_BUILD_DIR}/Google-Mobile-Ads-SDK/GoogleMobileAds.framework/Modules"

// Bundle Identifier (новая версия)
PRODUCT_BUNDLE_IDENTIFIER = com.azg.Convertik

// IAP Product SKU (тестовый для новой версии)
IAP_PRODUCT_SKU = com.azg.Convertik

// Swift Compilation Flags
SWIFT_ACTIVE_COMPILATION_CONDITIONS = $(inherited) DEBUG DEPLOY_NEW

// App Version (новая версия)
INFOPLIST_KEY_CFBundleShortVersionString = 2.5
INFOPLIST_KEY_CFBundleVersion = 7

// App Encryption Export Compliance Code
ITSAppUsesNonExemptEncryption = NO

// Info.plist values (для чтения во время выполнения)
INFOPLIST_KEY_IAP_PRODUCT_SKU = com.azg.Convertik
INFOPLIST_KEY_ADMOB_APP_ID = ca-app-pub-3940256099942544~1458002511
INFOPLIST_KEY_ADMOB_BANNER_MAIN_BOTTOM = ca-app-pub-3940256099942544/2934735716
INFOPLIST_KEY_ADMOB_INTERSTITIAL_MAIN = ca-app-pub-3940256099942544/4411468910
INFOPLIST_KEY_ADMOB_REWARDED_MAIN = ca-app-pub-3940256099942544/1712485313

// Google Ads Configuration - Test IDs
// App ID
ADMOB_APP_ID = ca-app-pub-3940256099942544~1458002511

// Banner Ad Unit IDs
ADMOB_BANNER_MAIN_BOTTOM = ca-app-pub-3940256099942544/2934735716

