# База данных
DATABASE_URL=postgresql+asyncpg://user:password@localhost/convertik

# Redis
REDIS_URL=redis://localhost:6379/0

# Внешние API
RATES_API_URL=https://openexchangerates.org/api/latest.json
RATES_API_KEY=your_api_key_here

# Rate Limiting (Free Plan: 900 requests/month)
RATES_UPDATE_INTERVAL_MINUTES=60  # минимум 1 час между запросами к API
RATES_CHECK_INTERVAL_MINUTES=30   # проверка каждые 30 минут

# Безопасность
ADMIN_TOKEN=your-secret-admin-token

# APNs (Apple Push Notification service)
APNS_KEY=your_apns_key_here
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apns_team_id_here

# Приложение
APP_NAME=Convertik API
APP_VERSION=1.0.0
DEBUG=false

# Логирование
LOG_LEVEL=INFO 